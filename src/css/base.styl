    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: 10
    display-flex()
    flex-direction(column)
    justify-content(center)
    align-items(center)

  .counter
    padding: 0
    font-size: 12px
    width: 24px
    height: 24px
    line-height: 24px
    text-align: center
    margin: 2px

  .advance-counter
    background-color: transparent-lightblue

  .recurring-counter
    background-color: transparent-green

  .virus-counter
    background-color: transparent-red

  .power-counter
    background-color: transparent-purple

  .agenda-counter
    background-color: transparent-darkblue

  .credit-counter
    background-color: transparent-black

  .strength
    position: absolute
    z-index: 10
    padding: 0
    text-align: center
    background-color: transparent-orange-bright
    line-height: 24px
    font-size: 12px
